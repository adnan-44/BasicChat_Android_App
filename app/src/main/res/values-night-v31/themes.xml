<resources>
    <!-- Base application theme. -->
    <style name="Theme.BasicChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@android:color/system_neutral1_900</item>
        <item name="colorPrimary">@android:color/system_accent2_200</item>
        <item name="colorPrimaryVariant">@android:color/system_accent2_200</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_600</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_200</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_700</item>
        <item name="colorOnSecondary">@android:color/system_neutral2_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/system_neutral1_800</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.BasicChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/system_neutral1_800</item>
        <item name="colorPrimaryVariant">@android:color/system_neutral1_800</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_0</item>
        <item name="android:textColorPrimary">@android:color/system_neutral1_50</item>
    </style>
</resources>